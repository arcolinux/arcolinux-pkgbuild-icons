# Maintainer: twa022 <twa022 at gmail dot com>
# Maintainer: erik dubois <erik.dubois@gmail.com>
pkgname=sardi-flat-mint-y-icons-git
_pkgname=sardi-flat-mint-y-icons
_destname="/usr/share/icons/"
pkgver=21.01
pkgrel=6
pkgdesc="New icons from LinuxMint 18 inspired by the Moka icon set with Sardi-Flat as main icon set"
arch=('any')
url="https://github.com/arcolinux/arcolinux-mint-y-icons"
license=('GPL3')
depends=('sardi-icons')
makedepends=()
optdepends=()
conflicts=("${_pkgname}")
provides=("${_pkgname}")
source=("${_pkgname}"::git+https://github.com/arcolinux/arcolinux-mint-y-icons)
sha256sums=('SKIP')
# pkgver() {
#   cd "${srcdir}/${_pkgname}"
#   echo $(git rev-list --count master).$(git rev-parse --short master)
# }
package() {
  cd ${srcdir}/${_pkgname}/arcolinux-mint-y-icons/
  find .  -name "index.theme" -type f -exec sed -i "s/Name=ArcoLinux-Mint-Y-/Name=Sardi-Flat-Mint-Y-/g" {} \;
  find .  -name "index.theme" -type f -exec sed -i "s/Inherits=Adwaita,gnome,hicolor/Inherits=Sardi-Flat,Sardi,Surfn,Adwaita,gnome,hicolor/g" {} \;
  find .  -name "index.theme" -type f -exec sed -i "s/Hidden=true/Hidden=false/g" {} \;

 mv ArcoLinux-Mint-Y-Aqua Sardi-Flat-Mint-Y-Aqua
  mv ArcoLinux-Mint-Y-Blue Sardi-Flat-Mint-Y-Blue
  mv ArcoLinux-Mint-Y-Brown Sardi-Flat-Mint-Y-Brown
  mv ArcoLinux-Mint-Y-Grey Sardi-Flat-Mint-Y-Grey
  mv ArcoLinux-Mint-Y-Orange Sardi-Flat-Mint-Y-Orange
  mv ArcoLinux-Mint-Y-Pink Sardi-Flat-Mint-Y-Pink
  mv ArcoLinux-Mint-Y-Purple Sardi-Flat-Mint-Y-Purple
  mv ArcoLinux-Mint-Y-Red Sardi-Flat-Mint-Y-Red
  mv ArcoLinux-Mint-Y-Sand Sardi-Flat-Mint-Y-Sand
  mv ArcoLinux-Mint-Y-Teal Sardi-Flat-Mint-Y-Teal
  mv ArcoLinux-Mint-Y-Yellow Sardi-Flat-Mint-Y-Yellow
  cd ${srcdir}/${_pkgname}/arcolinux-mint-y-icons/
  install -dm 755 ${pkgdir}${_destname}
  cp -aR * ${pkgdir}${_destname}
}
